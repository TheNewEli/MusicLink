 page{
   height: 100%;
   background-color: #fff;
 }
 .container{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.Top .cover{
  position: absolute;
  width: 100%;
  height: 750rpx;
  z-index: -10;
}

.Top .theme{
  position: absolute;
  font-size: 30px;
  z-index: 10;
  font-family: KaiTi;
  color: #3d3d3d;
  left: 50rpx;
  top:645rpx;
}

.info-box image{
  position: absolute;
  z-index: 10;
  height: 100rpx;
  width: 100rpx;
  top: 630rpx;
  right: 50rpx;
}

/*****cover下的渐变效果*******/
.shade {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 375rpx;
  margin-top: 376rpx;
  background-image: -webkit-linear-gradient(top,transparent,#fff 90%); 
}


.toplist{
  display: flex;
  flex-direction: column;
  margin-top:750rpx;
}


.item-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5px 5px 5px 5px;
}

.item-box image{
  height: 80rpx;
  width: 80rpx;
  padding: 5px 10px 5px 10px;
}

.item-detail{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 10rpx 10rpx 2rpx 10rpx;
  margin-right: 40rpx;
  border-bottom: 1px solid #dfdfdf;  
}

.title{
  font-size: 16px;
  margin-bottom: 10rpx;
  font-family: Microsoft YaHei;
  width: 100%;
  color: #3d3d3d;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.singer{
  font-size: 12px;
  margin-bottom: 20rpx;
  margin-top: 2px;
  font-family: Microsoft YaHei;
  color: #a0a0a0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


.index{
  height: 80rpx;
  width: 80rpx;
  padding: 5px 10px 5px 10px;
  font-size: 30px;
  text-align: center;
  font-family: Microsoft YaHei;
  color: #B22222;
}