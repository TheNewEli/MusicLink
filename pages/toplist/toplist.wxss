 page{
   height: 100%;
   background-color: #000;
 }
 .container{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.Top .cover{
  position: absolute;
  width: 100%;
  height: 750rpx;
  opacity: 0.8; 
  z-index: -10;
}

.Top .theme{
  position: absolute;
  font-size: 30px;
  z-index: 10;
  font-family: Microsoft YaHei;
  color: #fff;
  left: 50rpx;
  top:620rpx;
}

.info-box image{
  position: absolute;
  z-index: 10;
  height: 100rpx;
  width: 100rpx;
  top: 610rpx;
  right: 50rpx;
}

/*****cover下的渐变效果*******/
.shade {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 375rpx;
  margin-top: 376rpx;
  background-image: -webkit-linear-gradient(top,transparent,currentColor 90%); 
}


.toplist{
  display: flex;
  flex-direction: column;
  margin-top:750rpx;
}


.item-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5px 5px 5px 5px;
}

.item-box image{
  height: 80rpx;
  width: 80rpx;
  padding: 5px 10px 5px 10px;
}

.item-detail{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 2rpx;
  border-bottom: 1px solid #F5F5F5;  
}

.title{
  font-size: 18px;
  margin-bottom: 10rpx;
  font-family: Microsoft YaHei;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.singer{
  font-size: 15px;
  margin-bottom: 10rpx;
  font-family: Microsoft YaHei;
  color: #cdcdcd;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


.index{
  height: 80rpx;
  width: 80rpx;
  padding: 5px 10px 5px 10px;
  font-size: 30px;
  text-align: center;
  font-family: Microsoft YaHei;
  color: #fff;
}