
page{
  background-color: #f5f5f5; 
}

@import "sing-item-tpl/tpl-wxss/count-dot-tpl.wxss";
.sing-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom:150rpx;
  z-index:-1;
 
}
.countDown{
  margin-top: 50%;
  z-index: 1;
  position: fixed;
}

.progress-bar{
  margin-top: 50%;
  width: 90%;
  height: 10rpx;
  position: fixed;
  z-index: 2;
  align-items: center;

}
.upload-btn{
  margin-top: 70%;
  margin-left: 40%;
  z-index: 10;
  position: fixed;
}

.upload-btn image{
  width: 100rpx;
  height: 100rpx;
  
}

.lyric-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}

.lyric{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 0px 25rpx 0px;
  width: 100%;
}

.lyric text{
  width: 100%;
  text-align: center;
  font-size: 17px;
  color: 	#808080;
}

.lyric-toview{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #e4eff9;
  padding: 25rpx 0px 25rpx 0px;
  width: 100%;
}


.lyric-toview .text{
  width: 100%;
  text-align: center;
  font-size: 17px;
  color: #a0a0a0; 
}

.lyric-toview .current{
  width: 100%;
  text-align: center;
  font-size: 17px;
  color: 	#8aaed7; 
}


.control-box{
  padding: 20rpx 10px 30rpx 10px;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;

  background-color: #f5f5f5; 
}


.control-box .image-other{
  height: 80rpx;
  width: 80rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.control-box .image-main{
  height: 100rpx;
  width: 100rpx;
}
