/********************/
.sing-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom:150rpx;
  z-index:-1;
}

.countDown{
  margin-top: 50%;
  z-index: 1;
  position: fixed;
}

.progress-bar{
  top: 0; 
  left: 0;
  right: 0;
  bottom: 0;
  position: fixed;
  z-index: 5;
  background-color: #000;
  opacity: 0.7;
  align-items: center;
}

.circleBar{
  z-index: 4;
  display: inline-block;
  margin-top: 30%;
  width: 50%;
  height: 33%;
  color: #f5f5f5;
  background-color: rgba(128,128,128,0);
  margin-left: 20%;
  align-items: center; 
}
.title{
  margin-top: 18%;
  margin-left: 0rpx;
  height: 50rpx;
  width: 100%;
  text-align: center;
  z-index: 3;
  font-size: 20px;
  color: #f5f5f5;
  background-color: rgba(128,128,128,0);
}
.cc{
  margin-top: -35%;
  z-index: 5;
  margin-left: 40.5%;
  font-size: 20px;
  color: #f5f5f5;
  background-color: rgba(128,128,128,0);
  font-family: "MicroSoft-YaHei";
}


.upload-btn{
  margin-top: 70%;
  margin-left: 40%;
  z-index: 10;
  position: fixed;
}

.upload-btn image{
  width: 100rpx;
  height: 100rpx;
  
}

.lyric-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}

.lyric{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 40rpx 25rpx 40rpx;
  /* width: 100%; */
}

.lyric text{
  /* width: 100%; */
  text-align: center;
  font-size: 17px;
  color: 	#808080;
}

.lyric-toview{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #e4eff9;
  padding: 25rpx 40rpx 25rpx 40rpx;
  /* width: 100%; */
}


.lyric-toview .text{
  /* width: 100%; */
  text-align: center;
  font-size: 17px;
  color: #a0a0a0; 
}

.lyric-toview .current{
  width: 100%;
  text-align: center;
  font-size: 17px;
  color: 	#8aaed7; 
}


.control-box{
  padding: 20rpx 10px 30rpx 10px;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;

  background-color: #f5f5f5; 
}


.control-box .image-other{
  height: 80rpx;
  width: 80rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.control-box .image-main{
  height: 100rpx;
  width: 100rpx;
}
