@import "../dialog-tpl/dialog.wxss";
@import "sing-item-tpl/tpl-wxss/count-dot-tpl.wxss";

page{
  width: 100%;
  height: 100%;
}
 
.sing-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom:150rpx;
  z-index:-1;
}
.countDown{
  margin-top: 50%;
  z-index: 1;
  position: fixed;
}

.progress-bar{
  margin-top: 0%;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 2;
  background-color: #cccccc;
  opacity: 0.7;
  align-items: center;
}

.circleBar{
  z-index: 2;
  position: fixed;
  margin-top: 40%;
  width: 50%;
  height: 30%;
  background-color: rgba(204, 204, 204, 1);
  margin-left: 20%;
  align-items: center;
}
.title{
  margin-top: 95%;
  margin-left: 0rpx;
  height: 50rpx;
  width: 100%;
  text-align: center;
  z-index: 3;
  font-size: 20px;
  background-color: rgba(204, 204, 204, 1);
}
.cc{
  z-index: 5;
  margin-left: 40.5%;
  margin-top: 65%;
  font-size: 20px;
  background-color: rgba(204, 204, 204, 1);
  font-family: "MicroSoft-YaHei";
  position: absolute;
}

.lyric-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
} 

.lyric{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 40rpx 25rpx 40rpx;
  /* width: 100%; */
}

.lyric text{
  /* width: 100%; */
  text-align: center;
  font-size: 17px;
  color: 	#808080;
}

.lyric-toview{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #e4eff9;
  padding: 25rpx 40rpx 25rpx 40rpx;
  /* width: 100%; */
}


.lyric-toview .text{
  /* width: 100%; */
  text-align: center;
  font-size: 17px;
  color: #a0a0a0; 
}

.lyric-toview .current{
  width: 100%;
  text-align: center;
  font-size: 17px;
  color: 	#8aaed7; 
}


.control-box{
  padding: 20rpx 10px 30rpx 10px;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* background-color: #f5f5f5;  */
}


.control-box .image-other{
  height: 80rpx;
  width: 80rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.control-box .image-main{
  height: 100rpx;
  width: 100rpx;
}

.upload-btn{
  margin-top:140%;
  margin-left: -7%;
  z-index: 11;
  position: fixed;
  background-color: #f5f5f5;
  opacity: 0.8;
 
}

.upload{
  width: 110rpx;
  height: 110rpx;
  z-index: 11;
  position: absolute;
  background-color: #f5f5f5;
  border-radius: 50%;
}
.wave-style{
  width: 110rpx;
  height: 110rpx;
  z-index: 10;
  position: absolute;
}

.dialog{
  width: 100%;
  height: 100%;
  z-index: 16;
  margin-top: 0rpx;
  position: fixed;
}