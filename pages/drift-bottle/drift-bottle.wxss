.background{
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: -10;
  opacity: 0.7;         
}

.control{
  width: 100%;
  display: flex;
  flex-direction: row;
