.world-title{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0px 0 0px 10px;
  border-bottom: 1px solid #cdcdcd;
  padding: 10px 0 10px 10px;
}

.world-title text{
  font-size: 20px;
  font-family: Microsoft YaHei;
  color: #696969;
}

.world-title image{
  height: 16px;
  width: 16px;
  margin-left: 10px;
}

.world-container{
  display: flex;
  flex-direction: column;
  padding: 0px 0px 0px 15px;
  overflow-y: auto;
  -webkit-overflow-scrolling: touth;
}

.world-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ededed;  
}

.world-initiator-nick{
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}

.world-initiator-nick image{
  width: 100rpx;
  height: 100rpx;
}

.world-initiator-nick text{
  font-size: 26rpx;
  color: #666;
  margin: 5px 0 3px 0px;
  width:50px;
  text-align:center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.world-detail{
  padding: 10px 5px 10px 10px;
  border-bottom: 1px solid rgba(255,255,255, 0.5);
  width: 100%;
}

.world-box{
  display: flex;
  flex-direction: row;
}

.title{
  font-size: 16px;
  font-family: Microsoft YaHei;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 1px 1px 1px 1px;
  border-bottom: 1px solid rgba(255,255,255, 0.5);
  width: 400rpx;
}

.time{
  margin-left:15px; 
  margin-top: 5rpx;
  color: #ccc;
  font-size: 24rpx;
}

.world-detail progress{
  margin-top: 20rpx;
  color: #ccc;
}