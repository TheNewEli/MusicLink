@import "../navigationBar-tpl/navigationBar-tpl.wxss";
page{
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}
.me-container{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.me-userInfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  height: 330rpx;
  background-color: #f8f8f8;
}

.me-userInfo image{
  margin-top: 5%;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.me-userInfo text{
  margin-top: 10px;
  font-size: 18px;
  font-family: Microsoft YaHei;
}

.me-settings{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
}

.me-menuitems{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  padding: 12px 0px 12px 0px;  
  border-bottom: 1px solid #f8f8f8; 
}

.me-menuitems-interval{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 12px 0px 12px 0px; 
  width: 100%;
  /* border-top: 10px solid #F5F5F5; */
  border-bottom: 10px solid #f8f8f8;
}

.menuitems-text{
  font-size: 14px;
  font-family: Microsoft YaHei;
  color: #696969;
  margin-left: 20rpx;
  width: 80%; 
}

.menuitems-image{
  height: 15px;
  width: 15px;
}

.menuitems-icon{
  height: 40rpx;
  width: 40rpx;
  margin-left: 30rpx;
   /* opacity: 0.7;  */
}


.me-menuitems-button{
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
  padding: 0px 0px 0px 0px;  
  border-bottom: 1px solid #f8f8f8; 
}

/*去除button边框*/
button::after{
  border: none;
}


.me-menuitems-button text{
  font-size: 14px;
  font-family: Microsoft YaHei;
  color: #696969;
  margin-left: 20rpx;
  width: 80%; 
  text-align: left;
}