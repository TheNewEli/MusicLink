.player {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.normal-player {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 150;
    background: #222;
}

/*背景半透明效果*/
.background {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 0.6;
    -webkit-filter: blur(40rpx);
    filter: blur(40rpx);
}
.top {
    position: relative;
    margin-bottom: 50rpx;
}
.top .title {
    width: 70%;
    margin: 0 auto;
    line-height: 80rpx;
    text-align: center;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: 36rpx;
    color: #fff;
}
.top .subtitle {
    line-height: 40rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
}


/***************中部*************/
.middle {
    position: fixed;
    width: 100%;
    top: 160rpx;
    bottom: 300rpx;
    white-space: nowrap;
    font-size: 0;
}
.middle .middle-l {
    display: inline-block;
    vertical-align: top;
    position: relative;
    width: 100%;
    height: 0!important;
    padding-top: 80%!important;
}
.middle .middle-l .cd-wrapper {
    position: absolute;
    left: 15%;
    top: 0;
    width: 70%;
    height: 90%;
}
.middle .middle-l .cd-wrapper .play {
    -webkit-animation-play-state: running !important;
    animation-play-state: running !important;   
}

.middle .middle-l .cd-wrapper .pause {
    -webkit-animation-play-state: paused!important;
    animation-play-state: paused!important;
}

.middle .middle-l .cd-wrapper .cd {
  width: 100%;
  height: 100%;
  border: 10rpx solid rgba(255,255,255,0.1);
  border-radius: 50%;
  
  /*cdImg 旋转动画 */
  -webkit-animation: rotate 20s linear infinite;
  animation: rotate 20s linear infinite; 
}

.middle .middle-l .cd-wrapper .cd .image {
    position: absolute;
    left: 0rpx;
    top: 0rpx;
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

@keyframes rotate{
    0% {
        transform: rotate(0)
    }
    100% {
        transform: rotate(360deg)
    }
}


/**********底部*********/
.bottom {
    position: absolute;
    bottom: 0rpx;
    width: 100%;
}
.bottom .progress-wrapper-box {
    /* display: -webkit-box;
    display: -ms-flexbox; */
    display: flex;
    /* -webkit-box-align: center;
    -ms-flex-align: center; */
    flex-direction: row;
    align-items: center;
    width: 80%;
    margin: 0rpx auto;
    padding: 20rpx 0;
}
.time.time-l {
    text-align: left;
}
.time.time-r {
    text-align: right;
}
.time {
  color: #fff;
  font-size: 24rpx;
  /* -webkit-box-flex: 0;
  -ms-flex: 0 0 60rpx; */
  flex: 0 0 60rpx;
  line-height: 60rpx;
  width: 60rpx;
}

.progress-wrapper {
     -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;  
}

.bottom .operators {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.middle-r {
    display: inline-block;
    vertical-align: top;
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.lyric-wrapper{
    width: 80%;
    margin: 0 auto;
    overflow: hidden;
    text-align: center;
    height: 100%;
}
.text{
    line-height: 32px;
    color: rgba(255, 255, 255, 0.5);
    font-size: 14px;
}
.current {
    color: #ffcd32;
}

.currentLyricWrapper {
    height:70rpx;
    font-size:12px;
    position:absolute;
    bottom:-80rpx;
    line-height: 70rpx;
    text-align: center;
    width: 100%;
    color: #ffcd32;
}

/*********swiper切换dots************/
.dots-wrapper {
    position: absolute;
    bottom: 300rpx;
    height: 20rpx;
    line-height: 20rpx;
    text-align: center;
    width: 100%;
}
.dots-wrapper .dots {
    width: 20rpx;
    height: 20rpx;
    border-radius: 10rpx;
    background: rgba(255, 255, 255, 0.5);
    display: inline-block;
    margin: 10rpx;
    margin-top: 0;
}
.dots-wrapper .current {
    width: 40rpx;
    background: rgba(255,255,255,.8);
}


/***********底部控制框********/
.control-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  padding: 10rpx 25rpx 80rpx 25rpx;
  background-color: #222; 
}

.control-box .icon{
