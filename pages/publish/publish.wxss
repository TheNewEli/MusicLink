page{
  top: 0;
  bottom: 0;
  background: #f5f5f5;
}
.container{

  display: flex;
  flex-direction: column;
  align-items: center;

  /* background: #222; */
}

.top-background{  
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 150;
  width: 100%;
  height: 300px;
}

.background{
  top: 0;
  width: 750rpx;
  height: 300px;
  z-index: -1;
  opacity: 0.3;   
  -webkit-filter: blur(10rpx); 
  position: absolute;    
  /* filter: blur(40rpx);  */
}

.cover{
  width: 300rpx;
  height: 300rpx;
  margin-left: 225rpx;
  margin-right: 225rpx;
  z-index: 0;
} 

.shader{
  width: 100%;
  height: 300px;
  background: #222; 
  opacity: 0.3; 
  z-index: 1;
  position: absolute;
}

.cancel{
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  width: 120rpx;
  margin-right: 630rpx; 
}



.inputDescription{
    width: 100%;
    display: flex;
    flex-direction: column;
    background: #f5f5f5;
}

.inputDescription text{
    padding: 3% 0 3% 0;
}

.textarea{
  padding: 20rpx 25rpx 20rpx 25rpx; 
  /* margin: 0rpx 40rpx 0rpx 40rpx; */
  /* border: 1rpx solid #8a8a8a; */
  background-color: #fdfdfd;
  font-size: 15px;
  color: #8a8a8a;
}


.text-main{
   font-size: 16px;
   color: #666; 
}


.publish{
  width: 600rpx;
  height: 40px;
  line-height: 40px;
  font-size: 15px;
  border-radius: 50px;
  background: #f05b41;
  color: white; 
  margin-top: 25%;
}

.button-hover{
  background: #cc0000;
  color: #dbcece;
}