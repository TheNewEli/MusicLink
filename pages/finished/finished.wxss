@import "../navigationBar-tpl/navigationBar-tpl.wxss";

page{
  background-color: #1c1c1c;
}

.control{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 160rpx;
  width: 750rpx;
  /* border-bottom: 1px solid #524c4b; */
  background-color: #3e3837;
}
slider{
  margin-left: 15px;
  margin-right: 10px;
}

.icon{
  margin-left: 40rpx;
  width: 40rpx;
  height: 40rpx;
}

.progress-container-box {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    margin: 0rpx auto;
    padding: 20rpx 40rpx 20rpx 0rpx;
}
.time.time-l {
    text-align: left;
    margin-right: 5px;
}
.time.time-r {
    text-align: right;
    margin-left: 5px;
}
.time {
  color: #FFF;
  font-size: 14px;
  flex: 0 0 60rpx;
  line-height: 60rpx;
  width: 60rpx;
}

.progress-container {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;  
}

.adjust{
  display: flex;
  flex-direction: column;
  align-items: center;
}


.row{
  width: 750rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.evaluate{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
  /* background-color: #3e3837; */
  border-bottom: 1px solid #524c4b;
}

.title-d {
  width: 100%;
  height: 40px;
  margin-top: 20px;
  margin-left: 40rpx;
  font-family: sans-serif;
  font-size: 45rpx;
  letter-spacing: 3rpx;
  color: #fff;
}

.score {
  width: 100%;
  height: 50px;
  font-family: sans-serif;
  font-weight: bold;
  font-size: 80rpx;
  text-align: center;
  color: #f00;
}

.text-progress {
  line-height: 40px;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-right: 40rpx;
  height: 40px;
  font-family: sans-serif;
  font-size: 13rpx;
  letter-spacing: 3rpx;
  color: #fff;
  width: 710rpx;
  text-align: right;
} 

.title-remain{
  height: 26px;
  font-family: sans-serif;
  font-style: normal;
  font-size: 40rpx;
  color: #fff;
  margin-right: 10rpx;
  margin-left: 10rpx;
  margin-top: 5rpx;
  /* text-align: center; */
}
.remained-num{
 font-weight: bold;
 font-size: 50rpx;
 color:#f00;
}

.bottom{
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 60px;
  line-height: 60px;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top:1px solid #524c4b;
}

.updata{
  width: 400rpx;
  height: 40px;
  line-height: 40px;
  border-radius: 25px;
  background-color: #f04f43;
  color: #fff;
  font-size: 15px;
  /* letter-spacing: 50rpx; */
  text-align: center;
  margin: 0;
}

.button-other{
  width: 175rpx;
  text-align: center;
  color: #fff;
  font-size: 14px;
}

