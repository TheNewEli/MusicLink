@import "../navigationBar-tpl/navigationBar-tpl.wxss";

.container{
  display: flex;
  flex-direction: column;
}

.title{
 font-family: FangSong;
 font-size: 15px;
 text-align: left;
 margin: 25rpx 0 25rpx 10rpx;
 font-weight: bold;
}

.top-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.top-item{
  display: flex;
  flex-direction: row;
  margin-bottom: 5rpx;
}

.top-item image{
  width: 240rpx;
  height: 240rpx;
  border-radius: 5px;
  margin-left: 10rpx;
  /* opacity: 0.9; */
}

.songList{
  width:500rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  padding: 30rpx 0 30rpx 0;
  border-bottom: 1px solid #f8f8f8;
}

.songList text{
  width: 430rpx;
  height: 60rpx;
  font-family: Microsoft YaHei;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 12px;
  color: #696969;
  margin-left: 20rpx;
  /*文字垂直居中  */
  display: flex;
  align-items: center;
}