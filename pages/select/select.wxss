.select-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.music-detail-container{
  position: fixed;
  z-index: 1; 
  width: 100%;
}

.music-detail {
  padding: 20rpx 0rpx 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #f5f5f5;
}

.music-detail image{
  height: 150rpx;
  width: 150rpx;
}

.music-detail-text{
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-left: 10px;
}

.music-detail-text text{
  font-size: 15px;
  color: #666;   /*歌曲介绍 文本 颜色*/
  font-family: Microsoft YaHei;
  margin-bottom: 10px;
}


/***********歌词选择************/
.lyrics-container{
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding-top: 200rpx;
  padding-bottom: 100px;
  background-color: #f5f5f5; /*歌词容器 背景 颜色*/
}

.lyrics-item image{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  margin: 3px 25rpx 3px 25rpx;
}

.lyrics-item text{
  font-size: 17px;
  color: #808080;     /*未选择歌词 文本 颜色*/  
  font-family: Microsoft YaHei;
  width: 550rpx;
  text-align: center;
}

.selected-self{
  background-color: #e4eff9;  /*用户已选择歌词 背景 颜色*/
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  padding: 5px 0px 5px 0px; 
}

.selected-self text{
  font-size: 17px;
  color: #8aaed7;     /*用户已选择歌词 文本 颜色*/
  font-family: Microsoft YaHei;
  width: 550rpx;
  margin-left: 100rpx;
  text-align: center;
}

.selected-self image{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  margin: 3px 25rpx 3px 25rpx;
}

.selected{
  background-color: #f0f0f0;  /*已选择歌词 背景 颜色*/
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  padding: 5px 0px 5px 0px; 
}

.selected text{
  color: #808080;    /*已选择歌词 文本 颜色*/
  margin-right: 100rpx;
}

.unselected{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100%;
  padding: 5px 0px 5px 0px; 
}

.unselected text{
  margin-right: 100rpx;
}

/*********提交按钮************/
.select-box{
  position: fixed;
  bottom: 0;
  left:0;
  right: 0;
  min-height: 100rpx;
  z-index: 1000;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color:#8aaed7;  /*按钮容器背景色*/
  border-top: 1px solid #F5F5F5;

  color: #fff;
  font-size: 16px;
}

.select-box image{
  height: 80rpx;
  width: 80rpx;
}

.lock{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 350rpx;
}

.lock image{
  height: 50rpx;
  width: 50rpx;
  margin-left: 100rpx;
}

.lock text{
  margin-left: 50rpx;
}

.handon{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 350rpx;
}

.handon image{
  height: 50rpx;
  width: 50rpx;
  margin-left: 50rpx;
}

.handon text{
  margin-left: 50rpx;
}

