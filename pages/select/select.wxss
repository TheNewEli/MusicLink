.select-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.music-detail-container{
  position: fixed;
  z-index: 1;
  background: #FFFFFF;
  width: 100%;
}

.music-detail {
  margin: 20rpx 20rpx 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #F5F5F5;
}

.music-detail image{
  height: 150rpx;
  width: 150rpx;
}

.music-detail-text{
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-left: 10px;
}

.music-detail-text text{
  font-size: 15px;
  color: #666;
  font-family: Microsoft YaHei;
  margin-bottom: 10px;
}


/***********歌词选择************/
.lyrics-container{
  overflow-y: scroll;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 160rpx;
  padding-bottom: 150px; 
}

.lyrics-item{
  background-color: #fff;
}

.lyrics-item image{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  margin: 3px 25rpx 3px 25rpx;
}

.lyrics-item text{
  font-size: 17px;
  color: #666;
  font-family: Microsoft YaHei;
  width: 550rpx;
  margin-right: 100rpx;
  text-align: center;
}

.selected{
  background-color: #F5F5F5;
   display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  padding: 5px 0px 5px 0px; 
}

.selected text{
  color: #cdcdcd;
}

.unselected{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100%;
  padding: 5px 0px 5px 0px; 
}
