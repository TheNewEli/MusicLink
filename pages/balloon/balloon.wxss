.center{
  width: 100%;
  height: 400px;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  top:15%;
}


.page-bac{
  position: fixed;
  top:15%;
  width: 100%;
  height: 400px;
}

.center textarea{
  margin-top: 40px;
  font-size: 15px;
  width: 80%;
  border: 2px solid #d4cab4;
  color: #6a6a6a;
}

.center-text{
  z-index: 3;
  height: 30px;
  line-height: 30px;
  width: 80%;
  text-align: left;
  font-size: 14px;
  color: #6a6a6a;
}


.control{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom:5%;
}

.item{
  width: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.item image{
  z-index: 5;
  height: 180rpx;
  width: 180rpx;
}

.center button{
  margin-top: 3px;
  height: 20px;
  line-height: 20px;
  font-size: 15px;
}

.controlPanel-btn{
  height: 10%;
  width: 100%;
  display: flex;
  flex-direction: row;
  bottom: 0px;
}


.list-container{
  z-index: 3;
  width: 80%;
  /* margin-top: 10px; */
  height: 200px;
}

.list-item-other{
  display: flex;
  flex-direction: row;  
}

.on{
  background: #c9bfa6; /*dad0b7*/
}

.list-initiator-nick{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.list-initiator-nick image{
  margin: 6px;
  width: 100rpx;
  height: 100rpx;
  border-radius: 5px;
}

.list-initiator-nick text{
  font-size: 26rpx;
  color: #666;
  margin: 5px 0 3px 0px;
  width:50px;
  text-align:center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list-detail{
  padding: 3px 0px 0px 0px;
  /* border-bottom: 1px solid #eee;  */
}

.list-box{
  padding: 8px 0px 0px 0px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title{
  font-size: 14px;
  font-family: Microsoft YaHei;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 1px 1px 1px 3px;
  width: 250rpx;
}

.time{
  font-size: 12px;
  width: 160rpx;
  /* margin-top: 5rpx; */
  color: #a0a0a0;

  text-align: right;
}


.list-detail progress{
  margin-top: 10rpx;
  margin-right: 8rpx;
  font-size: 13px;
  color: #6a6a6a;
}


.list-box image{
  height: 30rpx;
  width: 30rpx;
}