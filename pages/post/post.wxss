/* pages/post.wxss */
@import "post-item-tpl/tpl-wxss/song-list-tpl.wxss";

.nav-container{
  width: 100%;
  height: 45px;  
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  z-index: 10;
}

.nav-container .image-back{
  width: 15px;
  height: 15px;
  padding: 15px 10px 15px 10px;
}

.text-back-false{
  margin-left: 20px;
  font-size: 20px;
  /* margin-top: 11px; */
  /* display: flex; */
}


.search{
  width: 430rpx;
  height: 65rpx; /**50-70rpx 都比较好看**/
  display: flex;
  flex-direction: row;
  align-items: center;
  /* border: 1px solid #cdcdcd;   */
  border-radius: 30px; 
  margin-left: 50rpx;
  background: #d33228; 
  /* opacity: 0.5; */
}
.search .search-image{
  margin-left: 50rpx; 
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.search textarea{
  width: 280rpx;
  color: #fff;
  height:30rpx;
  margin-right: 50rpx;
  font-size: 12px;

}

.searchResult{
  position: fixed;
  z-index: 10;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.searchItem{
  background: #f8f8f8;
  width: 750rpx;
  border-bottom: 1px solid #dbd4db;
}


.searchItem text{
  height: 40px;
  line-height: 40px;
  font-size: 13px;
  margin-left: 70rpx;
}

.StopSearch{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 8;
  background: #000;
  opacity: 0.7;
}


/*********主页面***********/
swiper
{
  width: 100%;
  height: 375rpx;
  margin-top: 0rpx;
  background-color: black;
}
  
 swiper image
{
  width: 100%;
  height: 500rpx;
}

.container{
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.songs-template{
    width:100%;
}



.post-subfield{
  width: 720rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 15rpx 0 15rpx;
  border-bottom: 1px solid #f8f8f8;
}

.subfield-item{
  display: flex;
  flex-direction: column;
  width: 80rpx;
  padding: 40rpx 50rpx 20rpx 50rpx;
  align-items: center; 
   margin-left: 25rpx;
   margin-right: 25rpx; 
}

.subfield-item image{
  height: 80rpx;
  width: 80rpx;
}

.subfield-item text{
  font-family: Microsoft YaHei;
  font-size: 14px;
  color: #696969;
  padding-top: 20rpx;
  width: 160rpx;
  text-align: center;
}
