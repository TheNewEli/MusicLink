/* pages/dialog.wxss */

page {
  height: 100%;
}

.score-box {
  
  height: 100%;
  width: 100%;
  z-index: 10;
  opacity: 0.9;
  background-color: #474747;
}

.bck-bottom {
  width: 100%;
  height: 100%;
  display: flex;
  position: absolute;
  opacity: 0.7;
  z-index: 10;
  
  
}

.display-area {
  margin-top: 40%;
  margin-left: 15%;
  width:  70%;
  height: 50%;
  border-radius: 5%;
  background-color: #262626;
}

.messageBox {
  display: flex;
  flex-direction: column;
  width: 70%;
  height: 50%;
  position: absolute;
  z-index: 15;
  margin-top: 40%;
  margin-left: 15%;
  border-radius: 5%;
}

.title-d {
  width: 90%;
  height: 10%;
  margin-top: 10%;
  margin-left: 5%;
  font-family: sans-serif;
  font-weight: bold;
  font-size: 70rpx;
  color: #fff;
  letter-spacing: 3rpx;
  text-align: center;
}
.prompt{
  width: 80%;
  color: #fff;
  text-align:left;
  margin-top: 15%;
  text-indent: 2em;
  word-break: break-all;
  word-wrap:break-word;
  margin-right: 10%;
  margin-left: 10%;
}
.opt-btn{
  margin-top: 30%;
  margin-left: 13%;
  display: flex;
  flex-direction: row;
  height: 10%;
  width: 90%;
  align-items: center;
}
.trylistening-btn{
  color: #ff4081;
  text-align: center;
  margin-right: 20%;
  font-size: 32rpx;
  height: 100%;
  width: 30%;
}

.post-btn{
  color: #ff4081;
  text-align: center;
  margin-right: 11%;
  font-size: 32rpx;
  height: 100%;
  width: 30%;
}

.cancel-btn {
  margin-top: 140%;
  margin-left: 45%;
  height: 80rpx;
  width: 80rpx;
  z-index: 16;
  position: absolute;
}


.cancel-img {
  height: 80rpx;
  width: 80rpx;
}

