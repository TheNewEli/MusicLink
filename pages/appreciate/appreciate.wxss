page{
  top: 0;
  bottom: 0;
  background: #f5f5f5;
}

.container{
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;

  /* background: #222; */
}

.top-background{  
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 150;
  width: 100%;
  height: 667px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.background{
  top: 0;
  width: 750rpx;
  height: 667px;
  z-index: -1;
  opacity: 0.3;   
  -webkit-filter: blur(10rpx); 
  position: absolute;    
  /* filter: blur(40rpx);  */
}

.shader{
  width: 750rpx;
  height: 667px;
  background: #222; 
  opacity: 0.3; 
  z-index: 1;
  position: absolute;
}

.cancel{
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  width: 120rpx;
  margin-right: 630rpx; 
}

/*******************************/
.control{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 160rpx;
  width: 750rpx;
  border-bottom: 1px solid #524c4b;
  /* background-color: #3e3837; */
}
slider{
  margin-left: 15px;
  margin-right: 10px;
}

.icon{
  margin-left: 40rpx;
  width: 40rpx;
  height: 40rpx;
}

.progress-container-box {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    margin: 0rpx auto;
    padding: 20rpx 40rpx 20rpx 0rpx;
}
.time.time-l {
    text-align: left;
    margin-right: 5px;
    margin-left: 5px;
}
.time.time-r {
    text-align: right;
    margin-left: 5px;
}
.time {
  color: #FFF;
  font-size: 14px;
  flex: 0 0 60rpx;
  line-height: 60rpx;
  width: 60rpx;
}

.progress-container {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;  
}


.currentLyricContainer {
    height:40px;
    font-size:18px;
    line-height: 40px;
    text-align: center;
    color: #fff;
    margin-top: 10px;
    width: 710rpx;
}



.publish{
  bottom: 0;
  position: fixed;
  width: 600rpx;
  height: 40px;
  line-height: 40px;
  font-size: 15px;
  border-radius: 50px;
  background: #f05b41;
  color: white; 
  margin-top: 0;
  margin-bottom: 20px;
}

.button-hover{
  background: #cc0000;
  color: #dbcece;
}


.row{
  display: flex;
  flex-direction: row;
  align-items: center; 
  width: 750rpx;
}
.main{
  margin-left: 40rpx;
  margin-top: 20px;
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
}

.avatar-box{
  width: 560rpx;
  display: flex;
  flex-direction: row;
  align-items: center; 
  margin-top: 20px;
  white-space: nowrap;
}


.avatar-box image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  margin-left: 5px;

}


